@using WebFacturaMvc.Helpers
@model IEnumerable<Model.Entity.Usuario>

@{
    Layout = "~/Views/Shared/_LayoutMy.cshtml";
}
<h3 class="page-title">
    Administracion de Usuarios
    <small> Security</small>
</h3>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>Administracion de Usuarios
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                </div>
                <div class="actions">
                    <div class="inputs pull-right">
                        <a href="/AdminUsers/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                            <i class="fa fa-plus-circle"></i> Nuevo
                        </a>
                    </div>
                    <div class="inputs pull-right">
                        @using (Html.BeginForm())
                        {
                            <div class="portlet-input input-inline input-medium">
                                <div class="input-group">
                                    @Html.TextBox("Buscar", null, new { @class = "form-control input-circle-left", @placeholder = "Buscar", @title = "Buscar" })
                                    <span class="input-group-btn">
                                        <button class="btn btn-circle-right btn-default" type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.IdUsuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreUsuario)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.EmailUsuario)
                            </th>
                            <th>
                                Opciones
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NombreUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmailUsuario)
                            </td>
                            <td>
                                @using (Html.BeginForm("Delete", "AdminUsers", FormMethod.Post, new { @id = "notificationForm" }))
                                {
                                    <div class="input-group-btn">
                                        @Html.AntiForgeryToken()
                                       
                                        <a class="btn btn-danger btn-sm" href="javascript:confirmDelete('Delete','@item.IdUsuario')"><span class='glyphicon glyphicon-trash'></span></a>
                                    </div>
                                }
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/Content/plugins/datatables/datatables.js" type="text/javascript"></script>
    <script src="/Content/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/Content/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>

}

